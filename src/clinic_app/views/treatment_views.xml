<odoo>
    <record id="view_treatment_list" model="ir.ui.view">
        <field name="name">clinic.treatment.list</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="diagnosis_id"/>
                <field name="status"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="view_treatment_form" model="ir.ui.view">
        <field name="name">clinic.treatment.form</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="diagnosis_id"/>
                        <field name="status"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_treatment" model="ir.actions.act_window">
        <field name="name">Treatments</field>
        <field name="res_model">clinic.treatment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_clinic_treatment" name="Treatments"
              parent="clinic_management.menu_clinic_root" action="action_treatment"/>
</odoo>
