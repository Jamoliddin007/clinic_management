<odoo>
    <record id="view_medicine_list" model="ir.ui.view">
        <field name="name">clinic.medicine.list</field>
        <field name="model">clinic.medicine</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="generic_name"/>
                <field name="dosage_unit"/>
                <field name="manufacturer"/>
            </list>
        </field>
    </record>

    <record id="view_medicine_form" model="ir.ui.view">
        <field name="name">clinic.medicine.form</field>
        <field name="model">clinic.medicine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="generic_name"/>
                        <field name="dosage_unit"/>
                        <field name="manufacturer"/>
                        <field name="description"/>
                        <field name="contraindications_text"/>
                        <field name="contraindicated_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_medicine" model="ir.actions.act_window">
        <field name="name">Medicines</field>
        <field name="res_model">clinic.medicine</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_clinic_medicine" name="Medicines"
              parent="menu_clinic_root" action="action_medicine"/>
</odoo>
