<odoo>
    <record id="view_diagnosis_list" model="ir.ui.view">
        <field name="name">clinic.diagnosis.list</field>
        <field name="model">clinic.diagnosis</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="diagnosis"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="view_diagnosis_form" model="ir.ui.view">
        <field name="name">clinic.diagnosis.form</field>
        <field name="model">clinic.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="diagnosis"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_diagnosis" model="ir.actions.act_window">
        <field name="name">Diagnoses</field>
        <field name="res_model">clinic.diagnosis</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_clinic_diagnosis" name="Diagnoses" parent="menu_clinic_root" action="action_diagnosis"/>
</odoo>
